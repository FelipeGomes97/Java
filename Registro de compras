import java.util.Locale;
import java.util.Scanner;

public class RegistroCompras {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Locale.setDefault(Locale.US);

        int codigo, quant, x;
        double soma = 0;
        x = 1;

        /*
        O programa registra as compras pelo c칩digo do produto, sendo eles:
        1 - Cachorro quente = R$4.00
        2 - X-Salada = R$4.50
        3 - X-Bacon = R$5.00
        4 - Torrada simples = R$2.00
        5 - Refrigerante = R$1.50
         */

        while (x != 0) {
            System.out.println("Digite o c칩digo do item: ");
            codigo = sc.nextInt();
            System.out.println("Digite a quantidade de produtos: ");
            quant = sc.nextInt();
            System.out.print("Digite 1 para registrar mais produtos ou 0 para finalizar: ");
            x = sc.nextInt();

            switch (codigo) {
                case 1:
                    soma += 4.00 * quant;
                    break;
                case 2:
                    soma += 4.50 * quant;
                    break;
                case 3:
                    soma += 5.00 * quant;
                    break;
                case 4:
                    soma += 2.00 * quant;
                    break;
                case 5:
                    soma += 1.50 * quant;
                    break;
            }

            while (x != 1 && x != 0) {
                System.out.println("C칩digo inv치lido. Tente novamente");
                System.out.print("Digite 1 para registrar mais produtos ou 0 para finalizar: ");
                x = sc.nextInt();
                System.out.println();
            }
        }

        System.out.println();
        System.out.printf("Total: R$%.2f%n", soma);
    }
}
